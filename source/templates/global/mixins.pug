mixin title-with-bottom-line(title, text)
    .title.title--with-bottom-line
        h2.title.title__header=title
        .title__text=text

mixin list-with-steps(title,image__src,text)
    li.approach__item
        .approach__image
            img.approach__picture(src=image__src alt="picture")
            .approach__step step
        .approach__text
            .approach__title=title
            p.approach__description=text